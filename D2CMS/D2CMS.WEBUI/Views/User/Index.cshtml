@model IEnumerable<D2CMS.CORE.Models.User>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-white">
            <div class="panel-heading clearfix">
                <h4 class="panel-title">Responsive table</h4>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Account</th>
                                <th>Name</th>
                                <th>Profile</th>
                                <th>Report</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 1; i <= Model.Count(); i++)
                            {
                                var item = Model.ElementAt(i-1);
                                <text>
                                    <tr>
                                        <th scope="row">@i</th>
                                        <td>@item.Account</td>
                                        <td>@item.Lastname  @item.Firstname</td>
                                        <td>View Profile</td>
                                        <td>View Report</td>
                                    </tr>
                                </text>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>