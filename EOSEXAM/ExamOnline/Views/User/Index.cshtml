@model IEnumerable<ExamOnline.Models.User>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <p>
                    <a asp-controller="User" asp-action="Create">Create New</a>
                </p>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.UserName)</th>
                            <th>@Html.DisplayNameFor(model => model.Password)</th>
                            <th>@Html.DisplayNameFor(model => model.Role.RoleName)</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Password)</td>
                                <td>@Html.DisplayFor(modelItem => item.Role.RoleName)</td>
                                <td>
                                    <a asp-controller="User" asp-action="Edit" asp-route-id="@item.UserId"><label class="badge badge-warning">Edit</label></a>
                                </td>
                                <td>
                                    <a asp-controller="User" asp-action="Delete" asp-route-id="@item.UserId"><label class="badge badge-danger">Delete</label></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>