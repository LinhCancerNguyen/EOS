@model ExamCore.Models.Question

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample" asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group row">
                        <label asp-for="Subject.Name" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9">
                            <input asp-for="Subject.Name" class="form-control" id="exampleInputEmail2" asp-for="Subject.Name">
                        </div>
                        <span asp-validation-for="Subject.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Content" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9">
                            <input asp-for="Content" class="form-control" id="exampleInputPassword2" asp-for="Content" rows="25">
                        </div>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success mr-2">Save</button>
                        <button class="btn btn-light" asp-action="Index">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

