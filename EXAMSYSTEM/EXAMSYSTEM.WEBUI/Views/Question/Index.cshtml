@model IEnumerable<EXAMSYSTEM.CORE.Models.Question>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    <div class="col-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <p>
                        <a asp-controller="Question" asp-action="Create">Create New</a>
                    </p>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Subject.SubjectName)</th>
                                <th>@Html.DisplayNameFor(model => model.QuestionContent)</th>
                                <th>@Html.DisplayNameFor(model => model.Answer)</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Subject.SubjectName)</td>
                                <td>@Html.DisplayFor(modelItem => item.QuestionContent)</td>
                                <td>@Html.DisplayFor(modelItem => item.Answer)</td>
                                <td>
                                    <a asp-controller="Question" asp-action="Edit" asp-route-id="@item.QuestionId"><label class="badge badge-warning">Edit</label></a>
                                </td>
                                <td>
                                    <a asp-controller="Question" asp-action="Delete" asp-route-id="@item.QuestionId"><label class="badge badge-danger">Delete</label></a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
